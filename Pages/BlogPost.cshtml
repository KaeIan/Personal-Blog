@page "{postTitle?}"
@model BlogWebsite.Pages.BlogModel

@{
	ViewData["Title"] = Model.Blog.Title;
}

<article>
	<section class="blog-body-container">
		<section class="blog-body">
			<section class="blog-info">
				<section class="blog-title">
					<h1>@Html.DisplayFor(model => model.Blog.Title)</h1>
				</section>
				<section class="blog-details">

					<img src="/Images/portrait.jpg" id="user-icon" alt="User Icon" />
					<p>
						By Kaelan Reece | Published on @Model.Blog.Published.ToString("MMMM dd, yyyy") | @Model.Blog.Length
						min read
					</p>
				</section>
				<p>@Model.Blog.Blurb</p>
			</section>
			<img src="/Images/Blogs/@Model.Blog.Path/header.jpg" class="blog-header-image" />

			@Html.Raw(Model.Blog.Content)

			@if (!String.IsNullOrWhiteSpace(Model.Blog.ProjectUrl))
			{
				<a href="@Model.Blog.ProjectUrl">Project Url</a>
			}
		</section>
	</section>
</article>